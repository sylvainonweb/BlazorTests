@if (IsSearching)
{
    <button class="btn btn-primary float-right search disabled" disabled><span class='fa-left fas fa-sync-alt spinning'></span>Rechercher</button>
}
else
{
    <button class="btn btn-primary btn-outline-primary float-right search" onclick="@OnSearchAsync">Rechercher</button>
}

    @functions {

protected bool IsSearching { get; set; }

    public async Task OnSearchAsync()
    {
        try
        {
            IsSearching = true;
            StateHasChanged();

            await Task.Delay(2000);

        }
        finally
        {
            IsSearching = false;
            StateHasChanged();
        }
    }
    }


