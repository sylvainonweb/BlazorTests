@using BlazorTests.Services
@using Telerik.Blazor;
@using Telerik.Blazor.Components.DateInput

    <div style="height:400px;">
        <EditForm Model="@person">
            <DataAnnotationsValidator />

            <strong> Hire Date</strong>
            <TelerikDateInput bind-Value="@person.HireDate" Format="MM/dd/yyyy"></TelerikDateInput>
            <ValidationMessage For="@(() => person.HireDate)"></ValidationMessage>

            <strong> Interview Meeting Date</strong>
            <TelerikDateInput bind-Value="@person.MeetingDate" Format="MM/dd/yyyy HH:mm:ss"></TelerikDateInput>
            <ValidationMessage For="@(() => person.MeetingDate)"></ValidationMessage>
        </EditForm>
    </div>



@functions  {
    Person person = new Person() { HireDate = new DateTime(2018, 5, 6), MeetingDate = new DateTime(2019, 3, 4, 15, 0, 0) };

    public class Person
    {
        public DateTime HireDate { get; set; }
        public DateTime MeetingDate { get; set; }
    }
}

