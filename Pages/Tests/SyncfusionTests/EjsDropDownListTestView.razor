@using Syncfusion.EJ2.RazorComponents.DropDowns
@using BlazorTests.Data
@inject BlazorTests.Services.ReferenceService ReferenceService

<EjsDropDownList id="dropDownList" DataSource="@Activities" fields="@DropDownFields" placeholder="Selectionner une activité" CssClass="e-textbox right" PopupHeight="220px"></EjsDropDownList>


@functions {

    public IList<ActivityEntity> Activities { get; set; }
    public object DropDownFields { get; } = new { value = "Id", text = "Text" };

    protected override async Task OnInitAsync()
    {
        this.Activities = await ReferenceService.GetActivityEntities();
    }
}
