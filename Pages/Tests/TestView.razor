@page "/test"
@using Telerik.Blazor.Components.TabStrip
@using BlazorTests.Pages.Tests.SyncfusionTests
@using BlazorTests.Pages.Tests.TelerikTests
@using BlazorTests.Pages.Tests.MatBlazorTests
@using BlazorTests.Pages.Tests.ParentChildTests


<button @onclick="ShowSyncfusionTestView">Syncfusion</button>
<button @onclick="ShowTelerikTestView">Telerik</button>
<button @onclick="ShowMatBlazorTestView">MatBlazor</button>
@*<button @onclick="ShowLongRunningProcessButtonTestView">Bouton avec îcônes</button>*@
<button @onclick="ShowParentChildTestView">Parent / Enfant</button>

<div style="@(IsSyncfusionTestViewVisible ? null : "display:none")">
    <p>Syncfusion</p>
    <SyncfusionTestView></SyncfusionTestView>
</div>

<div style="@(IsTelerikTestViewVisible ? null : "display:none")">
    <p>Telerik</p>
    <TelerikTestView></TelerikTestView>
</div>

<div style="@(IsMatBlazorTestViewVisible ? null : "display:none")">
    <p>MatBlazor</p>
    <MatBlazorTestView></MatBlazorTestView>
</div>

<div style="@(IsLongRunningProcessButtonTestViewVisible ? null : "display:none")">
    <p>Bouton avec îcônes</p>
    <LongRunningProcessButtonTestView></LongRunningProcessButtonTestView>
</div>

<div style="@(IsParentChildTestViewVisible ? null : "display:none")">
    <p>Tests parent / enfant</p>
    <ParentView></ParentView>
</div>

@code {

    bool IsSyncfusionTestViewVisible = false;
    bool IsTelerikTestViewVisible = false;
    bool IsMatBlazorTestViewVisible = false;
    bool IsLongRunningProcessButtonTestViewVisible = false;
    bool IsParentChildTestViewVisible = false;

    void ShowSyncfusionTestView()
    {
        IsSyncfusionTestViewVisible = true;
        IsTelerikTestViewVisible = false;
        IsMatBlazorTestViewVisible = false;
        IsLongRunningProcessButtonTestViewVisible = false;
        IsParentChildTestViewVisible = false;
    }

    void ShowTelerikTestView()
    {
        IsSyncfusionTestViewVisible = false;
        IsTelerikTestViewVisible = true;
        IsMatBlazorTestViewVisible = false;
        IsLongRunningProcessButtonTestViewVisible = false;
        IsParentChildTestViewVisible = false;
    }

    void ShowMatBlazorTestView()
    {
        IsSyncfusionTestViewVisible = false;
        IsTelerikTestViewVisible = false;
        IsMatBlazorTestViewVisible = true;
        IsLongRunningProcessButtonTestViewVisible = false;
        IsParentChildTestViewVisible = false;
    }

    void ShowLongRunningProcessButtonTestView()
    {
        IsSyncfusionTestViewVisible = false;
        IsTelerikTestViewVisible = false;
        IsMatBlazorTestViewVisible = false;
        IsLongRunningProcessButtonTestViewVisible = true;
        IsParentChildTestViewVisible = false;
    }

    void ShowParentChildTestView()
    {
        IsSyncfusionTestViewVisible = false;
        IsTelerikTestViewVisible = false;
        IsMatBlazorTestViewVisible = false;
        IsLongRunningProcessButtonTestViewVisible = false;
        IsParentChildTestViewVisible = true;
    }
}
