@inherits ComponentBase

    <div class="main">
        <div class="card-body bg-white px-4" style="margin-bottom:20px;">
            <h2>@Title</h2>
        </div>

        <div class="card-body bg-white componentTransition">
            @ChildContent
        </div>

        @if (@CloseAction != null)
        {
            <div class="card-footer bg-white" style="margin-top:20px;height:60px;">
                <div class="form-group float-right">
                    <button input="button" class="btn btn-light" @onclick="@(() => Close())">
                        <span class="fa fa-times" style="color:red" aria-hidden="true"></span> Fermer
                    </button>
                </div>
            </div>
        }
    </div>

@code {
    [Parameter] public RenderFragment ChildContent { get; set; }
    [Parameter] public string Title { get; set; }
    [Parameter] public Func<Task> CloseAction { get; set; }

    #region  Fermeture

    protected Task Close()
    {
        return CloseAction.Invoke();
    }

    #endregion
}
